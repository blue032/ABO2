<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="180dp"
        android:text="빈자리는"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="187dp"
        android:layout_marginTop="86dp" />

    <EditText
        android:id="@+id/editcafename"
        android:layout_width="140dp"
        android:layout_height="58dp"
        android:ems="10"
        android:hint="카페 이름 입력"
        android:inputType="text"
        android:text=""
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="135dp"
        android:layout_marginTop="125dp" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="337dp"
        android:layout_height="183dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="232dp"
        android:background="@drawable/frame_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 좌석 예시, 좌석 수와 배치에 따라 조정 필요 -->

        <ImageView
            android:id="@+id/seat3"
            android:layout_width="59dp"
            android:layout_height="51dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="105dp"
            android:src="@drawable/seat_empty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/seat4"
            android:layout_width="59dp"
            android:layout_height="51dp"
            android:layout_marginStart="135dp"
            android:layout_marginTop="105dp"
            android:src="@drawable/seat_empty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/seat5"
            android:layout_width="59dp"
            android:layout_height="51dp"
            android:layout_marginStart="245dp"
            android:layout_marginTop="105dp"
            android:src="@drawable/seat_empty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/seat1"
            android:layout_width="74dp"
            android:layout_height="51dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/seat_occupied"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/seat2"
            android:layout_width="74dp"
            android:layout_height="51dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/seat_occupied"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 차있는 좌석 이미지 -->

    </FrameLayout>

    <ImageView
        android:id="@+id/seat_e"
        android:layout_width="59dp"
        android:layout_height="51dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="448dp"
        android:src="@drawable/seat_empty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/seat_o"
        android:layout_width="65dp"
        android:layout_height="47dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="512dp"
        android:src="@drawable/seat_occupied"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="523dp"
        android:text="사용중"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="64dp"
        android:layout_height="21dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="460dp"
        android:text="빈좌석"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" /> <!-- 빈 좌석 이미지 -->

</androidx.constraintlayout.widget.ConstraintLayout>